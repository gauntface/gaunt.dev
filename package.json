{
  "name": "gaunt.dev",
  "type": "module",
  "scripts": {
    "build": "npm run build-hugo && npm run process-html",
    "build-hugo": "npm run clean && hugo && cp -r public tmp",
    "build-quick": "npm run clean && cp -r tmp public && npm run process-html",
    "clean": "rm -rf public",
    "process-html": "npm run html-assets && npm run minify-html",
    "html-assets": "htmlassets --vimeo=$VIMEO_TOKEN",
    "minify-html": "minify -r --match=\\.html -o ./public ./public",
    "dev": "hugo server --disableFastRender",
    "test": "npm run build && npm run ava",
    "test-integration": "npx ava ./test/integration/*.js",
    "ava": "npx ava ./test/*.js"
  },
  "private": true,
  "devDependencies": {
    "@types/glob": "7.2.0",
    "@types/node": "16.11.26",
    "ava": "4.3.1",
    "cssnano": "5.1.12",
    "glob": "8.0.3",
    "mkdirp": "1.0.4",
    "performance-leaderboard": "^9.6.3",
    "postcss": "8.4.14",
    "postcss-cli": "10.0.0",
    "postcss-import": "14.1.0",
    "postcss-preset-env": "7.7.2",
    "puppeteer": "15.3.2",
    "static-server": "2.2.1"
  },
  "dependencies": {
    "@gauntface/logger": "^3.0.9"
  }
}
