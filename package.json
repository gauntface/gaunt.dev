{
  "name": "gaunt.dev",
  "type": "module",
  "scripts": {
    "build": "npm run build-hugo && npm run process-html",
    "build-hugo": "npm run clean && hugo && rm -rf tmp && cp -r public tmp",
    "build-quick": "npm run clean && cp -r tmp public && npm run process-html",
    "clean": "rm -rf public",
    "process-html": "npm run html-assets && npm run minify-html",
    "html-assets": "htmlassets --vimeo=$VIMEO_TOKEN",
    "minify-html": "minify -r --match=\\.html -o ./public ./public",
    "dev": "hugo server --disableFastRender",
    "lint": "eslint '.' --fix && stylelint '**/*.css' --fix",
    "lint-plain": "eslint '.' && stylelint '**/*.css'",
    "test": "npm run build && npm run ava",
    "test-integration": "npx ava ./test/integration/*.js",
    "ava": "npx ava ./test/*.js"
  },
  "private": true,
  "devDependencies": {
    "@sentry/browser": "7.12.1",
    "@sentry/tracing": "7.12.1",
    "@types/glob": "8.0.0",
    "@types/node": "18.7.13",
    "@typescript-eslint/eslint-plugin": "5.37.0",
    "ava": "4.3.3",
    "avif": "^0.3.1",
    "cssnano": "5.1.13",
    "eslint": "8.23.1",
    "glob": "8.0.3",
    "mkdirp": "1.0.4",
    "performance-leaderboard": "9.6.3",
    "postcss": "8.4.16",
    "postcss-cli": "10.0.0",
    "postcss-import": "15.0.0",
    "postcss-preset-env": "7.8.1",
    "puppeteer": "17.1.3",
    "static-server": "2.2.1",
    "stylelint": "14.11.0",
    "stylelint-config-standard": "28.0.0"
  }
}
