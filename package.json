{
  "name": "gaunt.dev",
  "type": "module",
  "scripts": {
    "build": "npm run clean && hugo",
    "clean": "rm -rf public",
    "dev": "hugo server --disableFastRender",
    "test": "npm run ava",
    "test-integration": "npx ava ./test/integration/*.js",
    "ava": "npx ava ./test/*.js",
    "lint": "npx prettier --config ../workflows-static-site/.prettierrc.json -w ./**/*.css"
  },
  "private": true,
  "devDependencies": {
    "@sentry/browser": "7.65.0",
    "@types/node": "18.17.12",
    "ava": "5.3.1",
    "performance-leaderboard": "10.0.0",
    "puppeteer": "21.1.1",
    "static-server": "2.2.1",
    "typescript": "5.2.2"
  }
}
